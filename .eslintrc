{
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jquery": true
    },
    "rules": {
        "no-shadow": [
            2,
            {
                "builtinGlobals": true,
                "hoist": "functions",
                "allow": []
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "function-paren-newline": [
            "error",
            "consistent"
        ],
        "indent": [
            0,
            4,
            {
                "SwitchCase": 4
            }
        ],
        "no-tabs": 0,
        "func-names": [
            "error",
            "as-needed"
        ],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "only-multiline",
                "objects": "only-multiline",
                "functions": "never"
            }
        ],
        "prefer-destructuring": [
            "error",
            {
                "array": true,
                "object": false
            },
            {
                "enforceForRenamedProperties": false
            }
        ]
    }
}
